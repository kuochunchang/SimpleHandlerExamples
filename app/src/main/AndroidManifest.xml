<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guojun.simplehandlerexample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartThreadActivity"
            android:label="@string/title_activity_start_thread" >
        </activity>
        <activity
            android:name=".HandlerWorkWithMessageActivity"
            android:label="@string/title_activity_handler_work_with_message" >
        </activity>
        <activity
            android:name=".UsingHandlerToWorkWithServiceActivity"
            android:label="@string/title_activity_using_handler_to_work_with_service" >
        </activity>
    </application>

</manifest>
